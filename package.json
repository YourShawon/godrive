{
  "name": "godrive",
  "version": "1.0.0",
  "description": "A car rental app built with Node.js for user management, car listing, bookings, and reviews.",
  "homepage": "https://github.com/YourShawon/godrive",
  "bugs": {
    "url": "https://github.com/YourShawon/godrive/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YourShawon/godrive.git"
  },
  "license": "MIT",
  "author": "Moazzem Hossain Shawon",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node --loader tsconfig-paths/esm dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
